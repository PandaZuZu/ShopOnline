          <%= link_to 'Contul meu', controller: 'home', action: 'index' %>
        </div>
        <div class="header-menu">
          <%= link_to 'Comenzile mele', controller: 'home', action: 'index' %>
        </div>
      </div>

      <!-- menu links -->
      <div class="row">
        <div class="col-md-12" style="text-align: center;">
          <h1>
            <%= link_to 'Magazinul meu', controller: 'home', action: 'index' %>
