        <div class="col-md-1">
          <%= link_to 'Boys and Girls', controller: 'home', action: 'index' %>
        </div>
        <div class="col-md-1" style="padding: 0">
          <%= link_to 'Personal Tailoring', controller: 'home', action: 'index' %>
        </div>
        <div class="col-md-1">
          <%= link_to 'Editorial', controller: 'home', action: 'index' %>
        </div>
        <div class="col-md-3">
          <!-- empty -->
        </div>
      </div>
      <hr>
    </div>
    <%= yield %>
    <div class="row" style="margin-bottom:0;">
      <div class="footer">
        <div class="col-md-4">
          <%= link_to 'Apps', controller: 'home', action: 'index' %>
        </div>
        <div class="col-md-4">
          <%= link_to 'Location', controller: 'home', action: 'index' %>
        </div>
        <div class="col-md-4">
          <%= link_to 'Newsletter', controller: 'home', action: 'index' %>
        </div>
      </div>
    </div>
    <div class="row" style="text-align:center; background-color:#333333; color:#fff; margin-bottom:0;">
      <div class="col-md-2">
        <!-- empty -->
      </div>
      <div class="col-md-8">
        <div class="row" style="padding-top: 35px;">
          <div class="col-md-2">
            <%= link_to 'Edits and Places', controller: 'home', action: 'index' %>
          </div>
          <div class="col-md-2" style="padding:0">
