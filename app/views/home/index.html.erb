<div class="container-fluid">
  <div class="row">
    <!-- view button -->
    <div class="col-md-12" style="text-align:right; padding-right: 50px;">
      <% if @itemsPerPage == 2 %>
        <%= link_to (image_tag :'https://cdn4.iconfinder.com/data/icons/miu/22/editor_grid_view_block-512.png', size:'30x30'), controller: 'home', action: 'index', itemsPerPage: 4 %>
      <% else %>
        <%= link_to (image_tag :'https://cdn2.iconfinder.com/data/icons/picons-essentials/71/view_list-512.png', size:'30x30'), controller: 'home', action: 'index', itemsPerPage: 2 %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <!-- empty -->
    </div>
    <!-- featured -->
    <div class="col-md-8">
      <img src="http://static.massimodutti.net/3/static2/img/cabeceras_parrillas/2016/men/nuevo/new_men_web.jpg?20160324041000" width="100%" height="100%" />
    </div>
    <div class="col-md-2">
      <!-- empty -->
    </div>
  </div>
  <!-- items -->
  <% if @itemsPerPage == 2 %>
    <%= render "shared/listview" %>
  <% else %>
    <%= render "shared/gridview" %>
  <% end %>
</div>
